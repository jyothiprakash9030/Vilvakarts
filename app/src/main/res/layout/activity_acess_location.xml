<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AcessLocation">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/locationimg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <Button
        android:id="@+id/Travelbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="14dp"

        android:layout_marginBottom="30dp"
        android:backgroundTint="@color/linear"
        android:background="@drawable/button_background"
        android:text="@string/access_location"
        android:textColor="@color/white"
      app:layout_constraintBottom_toTopOf="@id/skipnow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Easy and reliable bus booking for all by Vilvakart App!"
        app:layout_constraintBottom_toTopOf="@id/Travelbutton"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="11dp"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/skipnow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="Skip Now"
        android:textColor="@color/red"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>