<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:background="@color/white"
    android:fitsSystemWindows="true"
    xmlns:android="http://schemas.android.com/apk/res/android">


<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SourceAndDestination"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:padding="12dp"
        tools:ignore="ExtraText,MissingConstraints">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0.5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="-2dp"
            android:layout_gravity="top|center_horizontal"
            android:clipToPadding="false"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            >
            <ImageView
                android:id="@+id/image_frame2"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:scaleType="centerInside"
                android:src="@drawable/call_ico" />

            <TextView
                android:id="@+id/text_for_bookings"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:layout_marginStart="4dp"
                android:gravity="left|center_vertical"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:singleLine="true"
                android:text="@string/for_bookings"
                android:textColor="#FF000000"
                android:textSize="15sp"
                tools:ignore="RtlHardcoded,TextSizeCheck" />

            <TextView
                android:id="@+id/text_phone_number"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="-2dp"
                android:layout_marginBottom="-2dp"
                android:gravity="left|center_vertical"
                android:includeFontPadding="false"
                android:maxLines="1"
                android:singleLine="true"
                android:text="@string/_91_0987654321"
                android:textColor="#FFD5191F"
                android:textSize="15sp"
                tools:ignore="RtlHardcoded,TextSizeCheck" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/container_frame6"
            android:layout_width="300dp"
            android:layout_height="48dp"

            android:layout_marginTop="10dp"
           android:background="@drawable/home_bus_shopbutton_bg"
            android:layout_gravity="top|center_horizontal"

            android:gravity="left|center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="6dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingTop="6dp">

            <LinearLayout
                android:id="@+id/container_frame7"
                android:layout_width="140dp"
                android:layout_height="44dp"

                android:background="@drawable/busbookingbackground"
                android:clipToPadding="false"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="6dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="6dp">

                <ImageView
                    android:id="@+id/image_frame3"
                    android:layout_width="16dp"
                    android:layout_height="16dp"

                    android:src="@drawable/bus_innline_img" />

                <TextView
                    android:id="@+id/text_bus_booking"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="left|center_vertical"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="Bus Booking"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    tools:ignore="RtlHardcoded,TextSizeCheck" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/container_frame8"
                android:layout_width="140dp"
                android:layout_height="44dp"
                android:layout_marginLeft="8dp"
                android:clipToPadding="false"


                android:gravity="center"
                android:onClick="gotosource"
                android:orientation="horizontal"
                android:paddingLeft="12dp"
                android:paddingTop="8dp"
                android:paddingRight="12dp"
                android:paddingBottom="8dp"
                tools:ignore="TouchTargetSizeCheck">

                <ImageView
                    android:id="@+id/image_frame4"
                    android:layout_width="14dp"
                    android:layout_height="16dp"

                    android:scaleType="centerInside"
                    android:src="@drawable/shop_icon_source_and_destination" />

                <TextView
                    android:id="@+id/text_shopping"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="left|center_vertical"
                    android:includeFontPadding="false"
                    android:maxLines="1"


                    android:singleLine="true"
                    android:text="Shopping"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    tools:ignore="TextSizeCheck" />
            </LinearLayout>
        </LinearLayout>
/////////////////////////////////////////////////

        <androidx.cardview.widget.CardView
            android:id="@+id/image_rectangle9"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="18dp"

            android:background="@color/cardview_shadow_end_color"
            android:scaleType="centerInside" >


            <LinearLayout
                android:id="@+id/container_frame9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"


                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="1dp">
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="From"



                    android:layout_marginLeft="24dp"
                    android:layout_gravity="top|left"
                    android:background="@drawable/email_text_bg"
                    android:clipToPadding="false"
                    android:gravity="center"

                    android:paddingBottom="2dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingTop="2dp"

                    />
            <AutoCompleteTextView

                android:id="@+id/editTextFrom"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:drawableStart="@drawable/vector"
                android:drawablePadding="13dp"
                android:background="@drawable/source_destination_background"
                android:hint="Tambaram"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:inputType="text"
                android:layout_marginBottom="-5dp"
                tools:ignore="TouchTargetSizeCheck" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="To"


                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="24dp"
                    android:layout_gravity="top|left"
                    android:background="@drawable/email_text_bg"
                    android:clipToPadding="false"
                    android:gravity="center"

                    android:paddingBottom="2dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:paddingTop="2dp"

                    />
                <AutoCompleteTextView

                    android:id="@+id/editTextTo"
                    android:layout_width="match_parent"
                    android:layout_height="44dp"
                    android:inputType="text"
                    android:background="@drawable/source_destination_background"
                    android:drawableStart="@drawable/toimg"
                    android:drawablePadding="13dp"
                    android:hint="@string/thanjavur"
                    android:padding="10dp"
                    tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />

                <ImageView

                    android:id="@+id/swapButton"
                     android:layout_marginTop="-80dp"
                    android:paddingEnd="8dp"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/frame_5"
                    android:layout_gravity="end"

                    />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:orientation="vertical">


                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date"


                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="24dp"
                        android:layout_gravity="top|left"
                        android:background="@drawable/email_text_bg"
                        android:clipToPadding="false"
                        android:gravity="center"

                        android:paddingBottom="2dp"
                        android:paddingLeft="12dp"
                        android:paddingRight="12dp"
                        android:paddingTop="2dp"

                        />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"

                    android:orientation="horizontal"
                    android:paddingBottom="13dp"

                    android:paddingRight="16dp"
                    android:background="@drawable/source_destination_background"
                   >

                <ImageView

                    android:id="@+id/calendarImage"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_margin="8dp"
                    android:layout_marginTop="5dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/calender"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />




                />

                <TextView
                    android:id="@+id/text_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
  android:gravity="center"
          android:layout_gravity="center"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:layout_marginStart="-13dp"
                    android:paddingTop="15dp"
                    android:layout_marginEnd="5dp"
                    android:singleLine="true"
                    android:text="@string/_19_oct_2024_friday"
                    android:textColor="#FF000000"
                    android:textSize="14sp"
                    tools:ignore="RtlHardcoded" />


                    <LinearLayout
                        android:id="@+id/today"
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
android:layout_marginStart="20dp"
                        android:background="@drawable/today_and_tomorrow_background_click__button_bg"

                        android:clipToPadding="false"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingBottom="4dp"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:paddingTop="4dp">

                        <TextView
                            android:id="@+id/text_today"
                            android:layout_width="wrap_content"
                            android:layout_height="15dp"
                            android:gravity="center"

                            android:includeFontPadding="false"
                            android:maxLines="1"

                            android:singleLine="true"
                            android:text="Today"
                            android:textColor="#FFFFFFFF"
                            android:textSize="11dp"
                            tools:ignore="TextSizeCheck" />


                    </LinearLayout>
                    <LinearLayout


                        android:id="@+id/tomorrow"
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="15dp"
android:background="@drawable/tomorrow_bg"

                        android:clipToPadding="false"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:paddingBottom="4dp"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:paddingTop="4dp">

                        <TextView
                            android:id="@+id/text_tomorrow"
                            android:layout_width="wrap_content"
                            android:layout_height="15dp"
                            android:gravity="center"

                            android:includeFontPadding="false"
                            android:maxLines="1"

                            android:singleLine="true"
                            android:text="Tomorrow"
                            android:textColor="@color/black"
                            android:textSize="11dp"
                            tools:ignore="TextSizeCheck" />


                    </LinearLayout>

                </LinearLayout>
                </LinearLayout>
                <Button
                    android:id="@+id/buttonSearchBus"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
            android:layout_marginTop="20dp"
                    android:background="@drawable/container_frame23"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingLeft="32dp"
                    android:paddingTop="11.5dp"
                    android:paddingRight="32dp"
                    android:paddingBottom="11.5dp"
                    android:text="Search bus"
                    android:textColor="@color/white"
                    tools:ignore="TouchTargetSizeCheck" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>









        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="16dp">

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@android:color/darker_gray" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/book_rtc_buses_by_vilvakart"
                android:textSize="16sp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:textColor="@android:color/black" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                android:background="@android:color/darker_gray" />

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">
            <HorizontalScrollView
                android:id="@+id/horizontalScrollView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fillViewport="true"
                android:scrollbars="none"
                android:fadingEdge="horizontal">

                <LinearLayout
                    android:id="@+id/imageContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp">


                <ImageView
                        android:layout_width="70dp"
                        android:layout_height="100dp"
                        android:layout_margin="4dp"
                        android:src="@drawable/img1"
                        android:contentDescription="" />

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="100dp"
                        android:layout_margin="4dp"
                        android:src="@drawable/img2"
                        android:contentDescription="Image 2" />

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="100dp"
                        android:layout_margin="4dp"
                        android:src="@drawable/kerala"
                        android:contentDescription="@string/img1" />

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="100dp"
                        android:layout_margin="4dp"
                        android:src="@drawable/img4"
                        android:contentDescription="@string/image_4" />

                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="100dp"
                        android:layout_margin="4dp"
                        android:src="@drawable/tsrtc"
                        android:contentDescription="@string/image_4" />

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_margin="4dp"
                        android:src="@drawable/assam"
                        android:contentDescription="@string/image_4" />

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_margin="4dp"
                        android:src="@drawable/tourtist"
                        android:contentDescription="@string/image_4" />

                </LinearLayout>

            </HorizontalScrollView>


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:src="@drawable/help"

                android:layout_gravity="end"

                />


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/special_offer"
                android:textSize="16dp"
                android:textStyle="bold"
                />
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:rowCount="1"
                android:padding="8dp">


                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="100dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="6dp"
                    android:src="@drawable/coming_soon"
                    android:contentDescription="Image 1" />

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="100dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="6dp"
                    android:src="@drawable/coming_soon"
                    android:contentDescription="Image 2" />
                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="100dp"
                    android:layout_columnWeight="1"
                    android:layout_margin="6dp"
                    android:src="@drawable/coming_soon"
                    android:contentDescription="Image 2" />





            </GridLayout>

        </LinearLayout>

        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bus Booking from VilvaKart"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/vilvakart_is_india_s_leading_online_bus_ticket_booking_service_provider_check_out_budget_friendly_offers_and_save_big_with_discount_coupons_to_book_bus_tickets_at_the_lowest_price_with_us"
                android:textSize="14sp"
                android:lineSpacingExtra="4dp"
                android:textColor="@android:color/black"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Read More.."
                android:textSize="14sp"
                android:textStyle="italic"
                android:textColor="@android:color/holo_red_dark"
                android:layout_marginTop="8dp" />

        </LinearLayout>






    </LinearLayout>
</androidx.core.widget.NestedScrollView>
    <LinearLayout
        android:id="@+id/footer_nav_bar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:elevation="8dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="@color/white"
       >

        <!-- Home -->
        <LinearLayout
            android:id="@+id/home"
            android:layout_width="0dp"

            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
              android:id="@+id/home_img"
                android:layout_width="24dp"
                android:layout_height="24dp"

                android:src="@drawable/home_red_color" />
            <TextView
            android:id="@+id/home_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textSize="12sp"
                />
        </LinearLayout>

        <!-- Bookings -->
        <LinearLayout
            android:id="@+id/Booking"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/Booking_image"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/booking" />
            <TextView
                android:id="@+id/Booking_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bookings"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Help -->
        <LinearLayout
            android:id="@+id/help"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/help_img"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/help" />
            <TextView
                android:id="@+id/help_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Help"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Account -->
        <LinearLayout
            android:id="@+id/account"

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
android:id="@+id/account_img"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/account" />
            <TextView
                android:id="@+id/account_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Account"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>